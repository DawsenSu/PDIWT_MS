<UserControl
    x:Class="PDIWT_BentleyDll_install.Views.install"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:PDIWT_BentleyDll_install.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <dxlc:LayoutControl>
        <dxlc:LayoutGroup Orientation="Vertical">
            <dxlc:LayoutItem Label="DllPath:">
                <TextBlock Text="{Binding InstallDllPath}" />
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="DgnlibPath:">
                <TextBlock Text="{Binding DgnLibPath}" />
            </dxlc:LayoutItem>
            <Button Command="{Binding InstallCommand}" Content="安装" />
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>
