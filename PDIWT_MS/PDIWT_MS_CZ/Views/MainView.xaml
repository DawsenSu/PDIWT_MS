<Window
    x:Class="PDIWT_MS_CZ.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="闸首参数化"
    Width="800"
    Height="600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../XamlResources/TreeViewResource.xaml" />
                <ResourceDictionary>
                    <dxmvvm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConvertor" />
                    <Style TargetType="{x:Type dx:GroupFrame}">
                        <Setter Property="Margin" Value="5" />
                    </Style>
                    <Style x:Key="MidTextBlock" TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <!--  底板页面  -->
                    <DataTemplate x:Key="BaseBoardDataTemplate">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dx:GroupFrame Grid.Row="0" Header="基本参数">
                                <dxlc:LayoutControl>
                                    <dxlc:LayoutGroup Orientation="Vertical">
                                        <dxlc:LayoutItem Label="船闸长(顺河向)=">
                                            <dxe:TextEdit Text="{Binding DB_Length}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="船闸宽(横河向)=">
                                            <dxe:TextEdit Text="{Binding DB_Width}" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup Orientation="Vertical">
                                        <dxlc:LayoutItem Label="高度=">
                                            <dxe:TextEdit Text="{Binding DB_Thickness}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="口门宽度=">
                                            <dxe:TextEdit Text="{Binding DB_DoorWidth}" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                            <dxlc:LayoutGroup Grid.Row="1" View="Tabs">
                                <!--  I型切槽  -->
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Name="CheckBox_IShapeGrooving" IsChecked="True" />
                                            <TextBlock Style="{StaticResource MidTextBlock}" Text="I型切槽" />
                                        </StackPanel>
                                    </dxlc:LayoutGroup.Header>
                                    <dxlc:LayoutGroup Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConvertor}, ElementName=CheckBox_IShapeGrooving}">
                                        <Image MaxWidth="300" Source="/PDIWT_MS_CZ;component/Image/dbremoved.png" />
                                        <dx:GroupFrame Header="参数列表">
                                            <dxlc:LayoutControl Orientation="Vertical">
                                                <dxlc:LayoutItem Label="切槽厚度=">
                                                    <dxe:TextEdit Text="{Binding DB_Removed_Thinckness}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="切槽顶长=">
                                                    <dxe:TextEdit Text="{Binding DB_Removed_A}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="切槽底长=">
                                                    <dxe:TextEdit Text="{Binding DB_Removed_B}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="坡度n=">
                                                    <dxe:TextEdit Text="{Binding DB_Removed_N}" />
                                                </dxlc:LayoutItem>
                                            </dxlc:LayoutControl>
                                        </dx:GroupFrame>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                                <!--  T型切槽  -->
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Name="CheckBox_TShapeGrooving" IsChecked="True" />
                                            <TextBlock Style="{StaticResource MidTextBlock}" Text="T型切槽" />
                                        </StackPanel>
                                    </dxlc:LayoutGroup.Header>
                                    <dxlc:LayoutGroup Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConvertor}, ElementName=CheckBox_TShapeGrooving}">
                                        <Image MaxWidth="300" Source="/PDIWT_MS_CZ;component/Image/dbremoved.png" />
                                        <dxlc:LayoutControl Orientation="Vertical">
                                            <dxlc:LayoutItem Label="切槽厚度=">
                                                <dxe:TextEdit Text="{Binding DB_Removed_Thinckness}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="切槽长度1=">
                                                <dxe:TextEdit Text="{Binding DB_Removed_A}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="切槽长度2=">
                                                <dxe:TextEdit Text="{Binding DB_Removed_B}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="切槽宽度1=">
                                                <dxe:TextEdit Text="{Binding DB_Removed_C}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="坡度n=">
                                                <dxe:TextEdit Text="{Binding DB_Removed_N}" />
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutControl>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutGroup>
                        </Grid>
                    </DataTemplate>
                    <!--  边墩页面  -->
                    <DataTemplate x:Key="SidePierDataTemplate">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dx:GroupFrame Grid.Row="0" Header="基本参数">
                                <dxlc:LayoutItem Label="边墩高度=">
                                    <dxe:TextEdit Text="{Binding BDun_Thickness}" />
                                </dxlc:LayoutItem>
                            </dx:GroupFrame>
                            <dx:GroupFrame Grid.Row="1" Header="平面形状参数">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Width="150"
                                        Source="/PDIWT_MS_CZ;component/Image/bdun.png" />
                                    <dx:GroupFrame
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Header="外形轮廓参数">
                                        <dxlc:LayoutControl>
                                            <dxlc:LayoutGroup Orientation="Vertical">
                                                <dxlc:LayoutItem Label="a=">
                                                    <dxe:TextEdit
                                                        Background="LightGray"
                                                        IsReadOnly="True"
                                                        Text="dfs" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="b=">
                                                    <dxe:TextEdit Text="{Binding BDun_B, Mode=TwoWay}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="c=">
                                                    <dxe:TextEdit Text="{Binding BDun_C, Mode=TwoWay}" />
                                                </dxlc:LayoutItem>
                                            </dxlc:LayoutGroup>
                                            <dxlc:LayoutGroup Orientation="Vertical">
                                                <dxlc:LayoutItem Label="d=">
                                                    <dxe:TextEdit
                                                        Background="LightGray"
                                                        IsReadOnly="True"
                                                        Text="fdsfs" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="e=">
                                                    <dxe:TextEdit Text="{Binding BDun_E, Mode=TwoWay}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="f=">
                                                    <dxe:TextEdit Text="{Binding BDun_F, Mode=TwoWay}" />
                                                </dxlc:LayoutItem>
                                            </dxlc:LayoutGroup>
                                        </dxlc:LayoutControl>
                                    </dx:GroupFrame>
                                    <dx:GroupFrame Grid.Row="1" Grid.Column="1">
                                        <dx:GroupFrame.Header>
                                            <CheckBox
                                                Name="CheckBox_SidePier"
                                                VerticalAlignment="Top"
                                                Content="包含倒角"
                                                IsChecked="True" />
                                        </dx:GroupFrame.Header>
                                        <dxlc:LayoutControl Orientation="Vertical" Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConvertor}, ElementName=CheckBox_SidePier}">
                                            <dxlc:LayoutItem Label="Tx=">
                                                <dxe:TextEdit Text="{Binding BDun_Tx, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="Ty=">
                                                <dxe:TextEdit Text="{Binding BDun_Ty, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="R1=">
                                                <dxe:TextEdit Text="{Binding BDun_R1, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutControl>
                                    </dx:GroupFrame>
                                </Grid>
                            </dx:GroupFrame>
                        </Grid>
                    </DataTemplate>
                    <!--  门槛页面  -->
                    <DataTemplate x:Key="DoorSillDataTemplate">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dx:GroupFrame Grid.Row="0" Header="基本参数">
                                <dxlc:LayoutItem Label="门槛厚度=">
                                    <dxe:TextEdit Text="{Binding MK_Thickness}" />
                                </dxlc:LayoutItem>
                            </dx:GroupFrame>
                            <dx:GroupFrame Grid.Row="1" Header="平面形状参数">
                                <dxlc:LayoutControl>
                                    <Image MaxWidth="250" Source="/PDIWT_MS_CZ;component/Image/mk.png" />
                                    <dxlc:LayoutControl>
                                        <dxlc:LayoutGroup Orientation="Vertical">
                                            <dxlc:LayoutItem Label="a=">
                                                <dxe:TextEdit
                                                    Background="LightGray"
                                                    IsReadOnly="True"
                                                    Text="ds" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="b=">
                                                <dxe:TextEdit Text="{Binding MK_B, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="c=">
                                                <dxe:TextEdit Text="{Binding MK_C, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup Orientation="Vertical">
                                            <dxlc:LayoutItem Label="d=">
                                                <dxe:TextEdit
                                                    Background="LightGray"
                                                    IsReadOnly="True"
                                                    Text="fds" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="e=">
                                                <dxe:TextEdit Text="{Binding MK_E, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="f=">
                                                <dxe:TextEdit Text="{Binding MK_F, Mode=TwoWay}" />
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutGroup>
                                    </dxlc:LayoutControl>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                        </Grid>
                    </DataTemplate>
                    <!--  输水系统_短廊道输水  -->
                    <DataTemplate x:Key="ShortCulvertDataTemplate">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dx:GroupFrame Grid.Row="0" Header="基本参数">
                                <dxlc:LayoutControl Orientation="Vertical">
                                    <dxlc:LayoutItem Label="廊道宽度=">
                                        <dxe:TextEdit Text="{Binding SSLD_Endfilling_Width}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="廊道边壁距边墩距离=">
                                        <dxe:TextEdit Text="{Binding SSLD_Endfilling_XDis}" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                            <dx:GroupFrame Grid.Row="1" Header="侧视图参数">
                                <dxlc:LayoutControl Orientation="Horizontal">
                                    <Image MaxWidth="300" Source="../Image/ssld2.png" />
                                    <dxlc:LayoutControl Orientation="Vertical">
                                        <dxlc:LayoutItem Label="a=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_Width}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="b=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_A}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="c=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_B}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="d=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_C}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="e=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_D}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="r1=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_D}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="r2=">
                                            <dxe:TextEdit Text="{Binding SSLD_Endfilling_D}" />
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutControl>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                        </Grid>
                    </DataTemplate>
                    <!--  输水系统_局部集中输水  -->
                    <DataTemplate x:Key="LocalConcertationCulvertDataTemplate">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dx:GroupFrame Grid.Row="0" Header="基本参数">
                                <dxlc:LayoutControl>
                                    <dxlc:LayoutItem Label="高度：">
                                        <dxe:TextEdit Text="{Binding SSLD_Thickness, Mode=TwoWay}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="Y轴距离：">
                                        <dxe:TextEdit Text="{Binding SSLD_YDis, Mode=TwoWay}" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                            <dxlc:LayoutControl Grid.Row="1">
                                <dxlc:LayoutGroup View="Tabs">
                                    <dxlc:LayoutGroup Header="俯视图平面参数">
                                        <dxlc:LayoutControl>
                                            <Image MaxWidth="200" Source="../Image/ssld.png" />
                                            <dxlc:LayoutGroup Margin="5,0" Orientation="Vertical">
                                                <dx:GroupFrame Header="长度参数">
                                                    <dxlc:LayoutControl Orientation="Horizontal">
                                                        <dxlc:LayoutGroup Orientation="Vertical">
                                                            <dxlc:LayoutItem Label="a=">
                                                                <dxe:TextEdit Text="{Binding SSLD_A, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                            <dxlc:LayoutItem Label="b=">
                                                                <dxe:TextEdit Text="{Binding SSLD_B, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                            <dxlc:LayoutItem Label="c=">
                                                                <dxe:TextEdit Text="{Binding SSLD_C, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                        </dxlc:LayoutGroup>
                                                        <dxlc:LayoutGroup Margin="5,0" Orientation="Vertical">
                                                            <dxlc:LayoutItem Label="d=">
                                                                <dxe:TextEdit Text="{Binding SSLD_D, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                            <dxlc:LayoutItem Label="e=">
                                                                <dxe:TextEdit Text="{Binding SSLD_E, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                            <dxlc:LayoutItem Label="f=">
                                                                <dxe:TextEdit Text="{Binding SSLD_F, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                        </dxlc:LayoutGroup>
                                                    </dxlc:LayoutControl>
                                                </dx:GroupFrame>
                                                <dx:GroupFrame Header="倒角参数">
                                                    <dxlc:LayoutControl>
                                                        <dxlc:LayoutGroup Margin="5,0" Orientation="Vertical">
                                                            <dxlc:LayoutItem Label="R1=">
                                                                <dxe:TextEdit Text="{Binding SSLD_R1, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                            <dxlc:LayoutItem Label="R2=">
                                                                <dxe:TextEdit Text="{Binding SSLD_R2, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                        </dxlc:LayoutGroup>
                                                        <dxlc:LayoutGroup Margin="5,0" Orientation="Vertical">
                                                            <dxlc:LayoutItem Label="R3=">
                                                                <dxe:TextEdit Text="{Binding SSLD_R3, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                            <dxlc:LayoutItem Label="R4=">
                                                                <dxe:TextEdit Text="{Binding SSLD_R4, Mode=TwoWay}" />
                                                            </dxlc:LayoutItem>
                                                        </dxlc:LayoutGroup>
                                                    </dxlc:LayoutControl>
                                                </dx:GroupFrame>
                                            </dxlc:LayoutGroup>
                                        </dxlc:LayoutControl>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox Name="CheckBox_WaterDivision" IsChecked="True" />
                                                <TextBlock Style="{StaticResource MidTextBlock}" Text="分流墩" />
                                            </StackPanel>
                                        </dxlc:LayoutGroup.Header>
                                        <dxlc:LayoutControl Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConvertor}, ElementName=CheckBox_WaterDivision}">
                                            <Image MaxWidth="250" Source="../Image/fld.png" />
                                            <dxlc:LayoutControl Orientation="Vertical">
                                                <dxlc:LayoutItem Label="R1=">
                                                    <dxe:TextEdit Text="{Binding DivisionPier_R1}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="R2=">
                                                    <dxe:TextEdit Text="{Binding DivisionPier_R2}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="R3=">
                                                    <dxe:TextEdit Text="{Binding DivisionPier_R3}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="A=">
                                                    <dxe:TextEdit Text="{Binding DivisionPier_A}" />
                                                </dxlc:LayoutItem>
                                                <dxlc:LayoutItem Label="B=">
                                                    <dxe:TextEdit Text="{Binding DivisionPier_B}" />
                                                </dxlc:LayoutItem>
                                            </dxlc:LayoutControl>
                                        </dxlc:LayoutControl>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox Name="CheckBox_Grill" IsChecked="True" />
                                                <TextBlock Style="{StaticResource MidTextBlock}" Text="出水格栅" />
                                            </StackPanel>
                                        </dxlc:LayoutGroup.Header>
                                        <dxlc:LayoutItem
                                            Label="格栅宽度及间隔(由轴线向单侧)："
                                            LabelPosition="Top"
                                            Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConvertor}, ElementName=CheckBox_Grill}">
                                            <dxg:GridControl
                                                Name="GridControl_Grill"
                                                Height="180"
                                                AutoGenerateColumns="AddNew"
                                                ItemsSource="{Binding GS_IntervalList, Mode=TwoWay}"
                                                SelectionMode="Cell">
                                                <dxg:GridControl.View>
                                                    <dxg:TableView
                                                        AllowSorting="False"
                                                        AutoWidth="True"
                                                        NewItemRowPosition="Bottom"
                                                        ShowGroupPanel="False">
                                                        <dxg:TableView.RowCellMenuCustomizations>
                                                            <dxb:BarButtonItem
                                                                Command="{x:Static dxg:GridCommands.DeleteFocusedRow}"
                                                                Content="删除所选行"
                                                                Glyph="/PDIWT_MS_CZ;component/Image/Icons/Delete.ico" />
                                                        </dxg:TableView.RowCellMenuCustomizations>
                                                    </dxg:TableView>
                                                </dxg:GridControl.View>
                                                <dxg:GridColumn
                                                    AllowAutoFilter="False"
                                                    AllowEditing="False"
                                                    AllowFocus="False"
                                                    FieldName="IntervalType"
                                                    Header="类型"
                                                    TabStop="False" />
                                                <dxg:GridColumn
                                                    AllowAutoFilter="False"
                                                    FieldName="Interval"
                                                    Header="间隔" />
                                            </dxg:GridControl>
                                        </dxlc:LayoutItem>
                                    </dxlc:LayoutGroup>
                                    <dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox Name="CheckBox_Baffle" IsChecked="True" />
                                                <TextBlock Style="{StaticResource MidTextBlock}" Text="消力坎" />
                                            </StackPanel>
                                        </dxlc:LayoutGroup.Header>
                                        <dxlc:LayoutControl View="Group" Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConvertor}, ElementName=CheckBox_Baffle}">
                                            <dxlc:LayoutItem Label="消力坎参数" LabelPosition="Top">
                                                <dxg:GridControl
                                                    Height="180"
                                                    AutoGenerateColumns="AddNew"
                                                    ItemsSource="{Binding BaffleList}"
                                                    SelectionMode="Cell">
                                                    <dxg:GridControl.View>
                                                        <dxg:TableView
                                                            AllowSorting="True"
                                                            AutoWidth="True"
                                                            NewItemRowPosition="Bottom"
                                                            ShowGroupPanel="False">
                                                            <dxg:TableView.RowCellMenuCustomizations>
                                                                <dxb:BarButtonItem
                                                                    Command="{x:Static dxg:GridCommands.DeleteFocusedRow}"
                                                                    Content="删除所选行"
                                                                    Glyph="/PDIWT_MS_CZ;component/Image/Icons/Delete.ico" />
                                                            </dxg:TableView.RowCellMenuCustomizations>
                                                        </dxg:TableView>
                                                    </dxg:GridControl.View>
                                                    <dxg:GridColumn FieldName="XDis" Header="距闸首中轴线的距离" />
                                                    <dxg:GridColumn FieldName="Width" Header="宽度" />
                                                    <dxg:GridColumn FieldName="Height" Header="高度" />
                                                </dxg:GridControl>
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutControl>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutControl>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate x:Key="EmptyRectDataTemplate">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dx:GroupFrame Grid.Row="0" Header="位置参数">
                                <dxlc:LayoutControl Orientation="Horizontal">
                                    <dxlc:LayoutItem Label="X=">
                                        <dxe:TextEdit Text="{Binding XDis}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="Y=">
                                        <dxe:TextEdit Text="{Binding YDis}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="Z=">
                                        <dxe:TextEdit Text="{Binding ZDis}" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                            <dx:GroupFrame Grid.Row="1" Header="形状参数">
                                <dxlc:LayoutControl Orientation="Horizontal">
                                    <dxlc:LayoutItem Label="长度=">
                                        <dxe:TextEdit Text="{Binding XDis}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="宽度=">
                                        <dxe:TextEdit Text="{Binding YDis}" />
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="高度=">
                                        <dxe:TextEdit Text="{Binding ZDis}" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                            <dx:GroupFrame Grid.Row="2" Header="各边倒角">
                                <dxlc:LayoutControl Orientation="Horizontal">
                                    <Image MaxWidth="100" Source="../Image/mk.png" />
                                </dxlc:LayoutControl>
                            </dx:GroupFrame>
                        </Grid>

                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  命令栏  -->
        <dxb:MainMenuControl
            Grid.Row="0"
            Grid.ColumnSpan="2"
            AllowCustomizationMenu="False"
            AllowHide="False"
            BarItemDisplayMode="ContentAndGlyph">
            <dxb:BarButtonItem
                Command="{Binding VertifyParamCommand}"
