<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    x:Class="WpfTest.MainWindow"
    Title="TestForWPF"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <StackPanel>
        <Button Margin="30" Click="Button_Click_1" Content="异步线程修改元素"/>
        <ProgressBar
            x:Name="pgb"
            MinHeight="25"
            MaxHeight="30"
            Margin="20"
            Maximum="100" />
        <Label
            x:Name="lb_pg"
            HorizontalAlignment="Center"
            Content="{Binding}" />
        <dxg:TreeListControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" Height="168">
            <dxg:TreeListControl.View>
                <dxg:TreeListView AllowPerPixelScrolling="True" ShowTotalSummary="True"/>
            </dxg:TreeListControl.View>
        </dxg:TreeListControl>
    </StackPanel>
</Window>
