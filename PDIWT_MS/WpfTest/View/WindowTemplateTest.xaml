<Window
    x:Class="WpfTest.View.WindowTemplateTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTest.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowTemplateTest"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Resource/Styles.xaml" />
    </Window.Resources>
    <StackPanel>
        <Border BorderBrush="Violet" BorderThickness="5.5">
            <Label>Label with a border</Label>
        </Border>
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Label>Label with a viewbox</Label>
        </Viewbox>
        <BulletDecorator>
            <BulletDecorator.Bullet>
                <Label VerticalContentAlignment="Center">[-]</Label>
            </BulletDecorator.Bullet>
            <BulletDecorator.Child>
                <TextBlock Padding="8" VerticalAlignment="Center">
                    Granny Simth
                </TextBlock>
            </BulletDecorator.Child>
        </BulletDecorator>
        <Button Style="{StaticResource RoundedGelButton}">Clike me</Button>
    </StackPanel>
</Window>
